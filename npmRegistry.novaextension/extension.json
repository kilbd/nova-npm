{
  "identifier": "com.kilb.npm-registry",
  "name": "npm Registry",
  "organization": "Drew Kilb",
  "description": "Helps add dependencies from the npm public registry to your Node project.",
  "version": "1.0.0",
  "categories": ["completions"],
  "license": "MIT",
  "repository": "https://github.com/kilbdev/nova-npm",
  "bugs": "https://github.com/kilbdev/nova-npm/issues",

  "main": "main.js",

  "commands": {
    "extensions": [
      {
        "title": "Install node packages",
        "command": "npmInstall",
        "when": "editorHasFocus"
      }
    ]
  },

  "activationEvents": ["onWorkspaceContains:package.json"],

  "entitlements": {
    "filesystem": "readonly",
    "requests": true
  }
}
